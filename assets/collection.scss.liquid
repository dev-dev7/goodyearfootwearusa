/*===================== Color =====================*/
$c-theme: {{ settings.c_theme }};
{%- if settings.font_origin == 'shopify' -%}
  $font-heading: {{ settings.font_heading.family }}, {{ settings.font_heading.fallback_families }};
  $font-body: {{ settings.font_body.family }}, {{ settings.font_body.fallback_families }};

{%- else -%}
  $font-heading: {{ settings.gf_heading }}, sans-serif;
  $font-body: {{ settings.gf_body }}, sans-serif;
{%- endif -%}

.template-collection {
  overflow: unset;
}

.page-title {
  margin-bottom: 4rem;
  font-family: $font-body;
  font-size: 2.5rem;
  font-weight: 400;
}

// Sort & Pagination Section
.collection-sort__by,
.collection-filter__by,
.collection-group__by {
  padding: 1rem 1.4rem;
  transition: all .39s;
  background-color: #ffffff;
  color: #444;
  line-height: 1.2em;

  svg {
    width: 8px;
    height: 5px;
    margin-left: auto;
  }
}

select.collection-sort__by,
select.collection-group__by {
  padding-right: 3.4rem;
}

.sort-wrapper {
  .collection-sort .collection-sort__header & {
    margin-left: -1.4rem;
  }
}

.collection-filter__by svg {
  width: 20px;
  height: 15px;
}

.group-wrapper b {
  margin-left: 6px;
  font-weight: 400;
}

.collection-grid__switcher {
  margin: 0 2px 0 3px;
  padding: 11px;
  cursor: pointer;

  svg {
    display: block;
    width: 1.4rem;
    height: 1.4rem;
    color: #d5d5d5;
  }

  .cfd-classic & {
    margin: 0 5px;
    border: 1px solid transparent;

    svg { color: #dfdfdf; }
  }
}

.icon-grid-three {
  &::before {
    content: '';
    display: block;
    width: 1.4rem;
    height: .9rem;
    margin-bottom: 1px;
    border-top: .4rem solid #dfdfdf;
    border-bottom: .4rem solid #dfdfdf;
  }

  &::after {
    content: '';
    display: block;
    width: 14px;
    border-bottom: 4px solid #dfdfdf;
  }
}

.collection-sort {
  margin-bottom: 4rem;
}

.pagination-container { margin-left: auto; }

.collection-sort__header {
  padding: 1.2rem 0;
  border-bottom: 1px solid #ececec;

  .medium-9 > *,
  .paginate-item { margin: .5rem .2rem .5rem 0; }

  .col-padding { position: initial; }
}

.filter-wrapper {
  .dd-pp__list {
    padding: 1rem .8rem 1.2rem;

    .sidebar-block {
      padding: 1.2rem .8rem;
      flex-grow: 1;
      max-width: 100%;
    }

    @media all and (min-width: 768px) {
      padding: 1.8rem 1.2rem 2.1rem;

      .sidebar-block { padding: 1.5rem 1.8rem 2.7rem; }
    }

    @media all and (min-width: 1200px) {
      padding: 3rem 1.5rem 4rem;

      .sidebar-block { padding: 2.5rem 2.5rem 3.5rem; }
    }
  }
}


.active-tags,
.filter-result_container {
  padding: 1.2rem 0;

  @media all and (min-width: 1200px) {
    padding: 2rem 0;
  }
}

.filter-result_container {
  @media all and (min-width: 1200px) {
    margin-bottom: -3rem;
  }
}

.active-tags {
  border-bottom: 1px solid #ececec;
}

.active-tag__item {
  margin: .4rem 1.8rem .4rem 0;
  padding: 1.2rem 1.8rem;
  border-radius: 1.8rem;
  background-color: #fff;
  box-shadow: 0 1px 4px 2px #e6e6e6;
  line-height: 1;

  svg {
    width: 15px;
    height: 15px;
    border-radius: 3px;
    margin-right: .9rem;
    padding: 3px;
    color: #333;
  }

  &.clear-tags {
    margin-left: auto;
  }

  @media all and (min-width: 1200px) {
    min-width: 13.6rem;
    margin: .6rem 2rem .6rem 0;
    padding: 1.3rem 2rem 1.2rem;
    border-radius: 2rem;

    svg {
      margin-right: 1.3rem;
    }
  }
}

// Sidebar Menu configuration
.mobile-sidebar {
  &.left { order: -1; }
  &.right { order: 13; }

  .nav-list__link { text-transform: capitalize; }
}

.sidebar-block {
  margin-top: 5rem;

  &:first-child { margin-top: 0; }

  .block-title { margin-bottom: 18px }

  a { color: #3a3a3a; }

  .sidebar-carousel .flickity-prev-next-button { top: -29px; }
}

// Color Filter Block
.filter-color {
  display: -ms-flexbox;
  display: flex;
  -ms-flex-wrap: wrap;
  flex-wrap: wrap;

  .nav-level__0 {
    margin-bottom: 1.1rem;

    .nav-list__link {
      position: relative;
      margin-right: 1rem;
      padding: 1rem;
      border: 1px solid transparent;

      &.tick-circle { border-radius: 50%; }

      &.option-label-white {
        border: 1px solid #333;

        .active svg { fill: #333; }
      }
    }
  }

  .ticksign {
    left: 50%;
    transform: translate(-50%, -50%);
    -webkit-transform: translate(-50%, -50%);
    line-height: 9px;

    svg {
      width: 9px;
      border: 0;
      background-color: transparent;
    }
  }

}

// Filter list block
.filter-list .tick-circle svg { border-radius: 50%; }
.filter-count {
  margin-left: 5px;
  color: #bdbdbd;
}

// Subcollections page
.sub-collection { margin: 6rem 0 18rem; }

.search-result {
  h5 { font-size: 1.5rem; }

  p {
    font-size: 1.4rem;
    margin: 10px 0 20px
  }
}

// Products area
.collection-layout {
  margin-bottom: 9rem;

  @media all and (min-width: 992px) {
    .sticky-dir-up {
      top: 7.5rem;
    }
  }
}

#collectionsContent {
  opacity: 1;

  &.loading > .row {
    transition: all .65s;
    opacity: .25;
  }

  &.list {
    .collection-card__wrapper { margin-bottom: 32px; }

    @for $i from 1 through 6 {
      .grid-items__#{$i} {
        flex: 0 0 100%;
        -ms-flex: 0 0 100%;
        width: 100%;
        max-width: 100%;
      }
    }

    .vertical-default,
    .vertical-advanced,
    .vertical-progressive,
    .vertical-classic,
    .vertical-modern,
    .vertical-details {
      .product-card {
        display: -ms-flexbox;
        display: flex
      }

      .product-description {
        display: block;
        height: 2.6em;
        font-size: 1.4rem;
        line-height: 1.3;
        overflow: hidden;
        text-overflow: ellipsis
      }

      .product-img {
        width: 17rem;
        min-width: 17rem;
        margin-right: 2rem
      }

      .product-name { margin-bottom: 1.8rem }

      .product-label {
        top: 1.2rem;
        right: auto;
        left: 1.2rem
      }

      .current-price { font-size: 1.9rem }
    }

    .vertical-default,
    .vertical-advanced,
    .vertical-classic,
    .vertical-modern,
    .vertical-details {
      .product-info {
        -ms-flex-direction: column;
        flex-direction: column;
      }

      .product-price { margin-bottom: 1rem }
      .spr-badge { margin-left: 0 }
    }

    .vertical-progressive {
      .product-detail { text-align: left }
      .product-info {
        -ms-flex-pack: start;
        justify-content: flex-start;
      }
    }
  }
}

.load-more,
#infinite-more-link {
  width: 100%;
  margin: 3rem 1.5rem 0;

  svg {
    display: none;
    width: 42px;
    margin: 0 auto;
  }

  &.disabled svg { display: block; }
}

.load-more.disabled {
  border-color: #eee !important;
  color: #eee !important;
  pointer-events: none;
  transition: .7s ease-in;

  span { display: none; }
  svg {
    width: auto;
    height: 12px;
  }
}

/*================== jRange ==================*/
.price-range-container {
  width: 100%;
  max-width: 100%;
  margin: 4.6rem auto 0;
  padding-bottom: 3.2rem;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;

  .back-bar {
    position: relative;
    height: .5rem;
    background-color: #eaeaea;

    .selected-bar {
      position: absolute;
      height: 100%;
      background-color: $c-theme
    }

    .pointer {
      position: absolute;
      top: 50%;
      width: 1.8rem;
      height: 1.8rem;
      transform: translateY(-50%);
      -webkit-transform: translateY(-50%);
      border: .6rem solid $c-theme;
      border-radius: 1.8rem;
      background-color: #fff;
      cursor: col-resize;
      opacity: 1;
      z-index: 2;
    }

    .pointer.last-active { z-index: 3; }

    .pointer-label {
      position: absolute;
      top: 2rem;
      background-color: #ffffff;
      color: $c-theme;
      font-family: Arial;
      font-size: 1.8rem;
      font-weight: 700;
      white-space: nowrap;
      line-height: 1;
    }

    .focused { z-index: 10 }
  }

  .clickable-dummy {
    cursor: pointer;
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .scale {
    top: 2px;
    position: relative;

    span {
      position: absolute;
      height: 5px;
      border-left: 1px solid #e5e5e5;
      font-size: 0;
    }

    ins {
      position: absolute;
      top: 10px;
      left: 0;
      color: #999;
      font-size: 9px;
      line-height: 1;
      text-decoration: none;
    }
  }

  &.slider-readonly .clickable-dummy,
  &.slider-readonly .pointer {
    cursor: auto;
  }
}

// Collections carousel
.collections-carousel .nav-middle .items-carousel { margin-top: 0 }

// Search page
.template-search .search-result {
  .sidebar-search__input {
    width: 28rem;
    height: 4.6rem;
    padding: 0 3rem;
    border: 1px solid #666666;
    font-size: 1.7rem;
    letter-spacing: .05em;
    outline: none;
  }

  .search-button {
    display: inline-block;
    width: 4.6rem;
    min-width: 4.6rem;
    height: 4.6rem;
    margin-left: 4px;
    border: 1px solid #666666;

    &:hover {
      border-color: $c-theme;
      background-color: $c-theme;
      color: #ffffff;
    }
  }

  .search-form {
    max-width: 33rem;
  }
}

@media all and (min-width: 768px) {
  .collection-layout { margin-bottom: 12rem; }
}

@media (min-width: 992px) {
  .sidebar-block {
    margin-top: 7rem;

    &:first-child { margin-top: 0; }

    .block-title { margin-bottom: 2.5rem; }

    .sidebar-carousel .flickity-prev-next-button {
      top: -3.6rem;
    }
  }

  #collectionsContent.list {
    .vertical-default,
    .vertical-advanced,
    .vertical-progressive,
    .vertical-classic,
    .vertical-modern,
    .vertical-details {
      .product-img {
        width: 24rem;
        min-width: 24rem;
        margin-right: 3rem;
      }

      .product-label {
        top: 2.5rem;
        left: 2.5rem
      }
    }
  }

  .collection-sort {
    margin-bottom: 7rem;
  }

  .collection-sort__header {
    padding: 2rem 0;
  }

  .collection-sort__by {
    width: 21.5rem;
  }
}

@media all and (min-width: 1200px) {
  .collection-layout { margin-bottom: 12rem; }

  .collection-sort__by,
  .collection-filter__by,
  .collection-group__by {
    min-width: 14rem;
    padding: 1rem 2.1rem;
  }

  .collection-sort .collection-sort__header .sort-wrapper {
    margin-left: -2.1rem;
  }
}

@media all and (max-width: 991px) {
  .collection-grid,
  .group-wrapper { display: none; }
}

@media all and (max-width: 567px) {
  .collection-sort .pagination-container {
    margin-right: auto;
    margin-left: auto;
  }
}

@media all and (max-width: 480px) {
  #collectionsContent.list {
    .vertical-default,
    .vertical-advanced,
    .vertical-classic,
    .vertical-modern,
    .vertical-progressive,
    .vertical-details {

      .product-detail { padding-top: 1rem }

      .product-img {
        width: 12rem;
        min-width: 12rem;
        margin-right: 1.2rem;
      }

      .product-name {
        margin-top: 1rem;
        margin-bottom: 1.2rem;
      }

      .product-deal { margin-bottom: 1.8rem }

      .product-description {
        height: 2.6em;
        margin-bottom: 1.4rem;
      }
    }
  }

  select.collection-sort__by {
    width: auto;
    padding-right: 5rem;
  }

  .template-search .search-result {
    .search-input-container {
      width: 100%;
    }

    .sidebar-search__input {
      width: 100%;
      padding: 0 2.4rem;
    }
  }
}