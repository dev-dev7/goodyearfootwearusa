// Product tab table
.product-details-tabs {
  margin-top: 6rem;
  color: #5c5c5c;
  font-size: 1.4rem;
  line-height: 2.3rem;

  table {
    width: 100%;
    border-top: 1px solid #efefef;
    border-left: 1px solid #efefef;
  }

  tr:nth-of-type(even) {
    background-color: #fbfbfb;
  }

  th,
  td {
    height: 40px;
    padding-left: 30px;
    border-right: 1px solid #efefef;
    border-bottom: 1px solid #efefef;
  }
}

.product-layout {
  position: relative;
  color: #686b6a;
  font-size: 1.5rem;

  .product-main { margin: 0 }

  h1.product-name {
    margin-top: 20px;
    color: #333333;
    font-size: $s-p-n;

    @media all and (min-width: 768px) {
      width: calc(100% - 90px);
    }
  }

  .product-price span { display: inline-block; }

  .current-price { font-size: 1.8rem; }

  .old-price span {
    font-size: 1.8rem;
    font-weight: 400;
    text-decoration: line-through;
  }

  .product-review { cursor: pointer; }

  .product-options,
  .limited-brand { margin-top: 25px; }

  .link-page-popup {
    color: $c-theme;
    font-family: Arial, sans-serif;
    font-size: 1.2rem;
    font-weight: 400;
    text-transform: lowercase;
  }

  .size-chart {
    width: 100%;
    margin-top: .3rem;
  }

  .product-deal { max-width: 22rem; }

  .product-price { margin: 1.6rem 0 2rem; }

  .btn-wishlist,
  .btn-compare {
    svg { color: #acacac; }
  }

  .product-form { margin-top: 3rem; }

  .option-label {
    min-width: 3.2rem;
    min-height: 3.2rem;
    padding: .3rem .8rem;
    line-height: 2.4rem;
  }

  .option-img-custom,
  .option-img-variant {
    width: 4rem;
    height: 4rem;
    padding: 0;
  }

  .product-single-option {
    display: block;
    margin: 2.5rem 0;

    .option-name {
      display: block;
      margin-bottom: 1.6rem;
    }
  }

  .product-sku { margin-bottom: 5px }

  .add-to-cart {
    margin-bottom: 1.3rem;
  }

  .items-carousel:hover .flickity-prev-next-button { opacity: .75 }

  .flickity-prev-next-button {
    opacity: 0;

    &.previous { left: 20px; }
    &.next { right: 20px; }
  }

  .payment-info {
    margin: 3rem 0;

    h5 {
      display: inline-block;
      padding: 3px 15px 15px 0;
      background-color: $c-main-background;
      color: $c-product-name;
      font-family: $f-p-n;
      font-size: 1.5rem;
      font-weight: 400;
      line-height: 1;
    }
  }

  .payment-info__image-container {
    margin-top: -24px;
    padding: 25px 15px;
    border: 1px solid #ececec;

    img {
      width: 100%;
      height: auto;
      padding: 5px;
    }

    svg {
      width: auto;
      height: 42px;
      padding: 5px;
    }
  }
}

// Classic Layout
.product-layout__classic {
  h1.product-name {
    color: #444444;
  }

  .current-price { font-size: 1.8rem; }
}

// Layout - Default
.product-layout__default {
}

// Layout - Grid
.product-layout__grid {
  > .full-width-container,
  > .container-1500 {
    padding: 0 15px;
    overflow: initial;

    @media all and (min-width: 1400px) {
      padding: 0 40px;

      .product-details-area {
        max-width: 520px;
        margin-right: auto;
        padding-left: 8rem;
      }
    }
  }

  .product-img-area {
    display: block;
    width: 100%;

    & > .row { margin: 0 -7px 0 -8px }
  }

  div[class^="grid-items__"] { padding: 15px 7px 0 8px }
}

// Layout - Center Image
.product-layout__center-image {
  @media all and (min-width: 992px) {
    h1.product-name {
      margin-top: 3.5rem;
    }

    .product-details-area,
    .product-details-summary {
      -ms-flex: 0 0 22.89%;
      flex: 0 0 22.89%;
      max-width: 22.89%;
    }

    .product-img-area {
      -ms-flex: 0 0 51.22%;
      flex: 0 0 51.22%;
      max-width: 51.22%;
    }

    .product-details-area {
      color: #444444;
    }
  }

  @media all and (max-width: 991px) {
    .product-details-summary {
      display: none;
    }
  }
}

// Layout - Sticky Form
.product-info-tips {
  margin-bottom: 2.4rem;
  font-size: 1.5rem;
}

.info-tips__container {
  padding: .5rem 0;

  svg {
    margin-right: 1rem;
  }
}

.product-layout__sticky-form {
  h1.product-name {
    width: 100%;
    font-size: 2.8rem;
    font-weight: 700;
    line-height: 3.5rem;
  }

  .product-review {
    margin-top: 2rem;
  }

  .product-details__text {
    margin: .9rem 0;

    label {
      color: #444444;
      font-weight: 700;
    }
  }

}

.product-form-sticky {
  @media all and (min-width: 992px) {
    padding: 15px;
    box-shadow: 0 0px 14px #f0f0f0;

    .product-price {
      margin-bottom: 2.1rem;
    }

    .current-price {
      font-size: 2.8rem;
    }

    .old-price {
      margin-right: .8rem;
      font-size: 1.7rem;
    }

    .product-single-option {
      display: block;
    }

    .option-name {
      display: block;
      margin-bottom: 1.6rem;
    }

    .btn-add-cart {
      margin-right: 0;
      margin-bottom: 3rem;
    }

    .product-form {
      margin-bottom: 2rem;
    }

    >*:last-child { margin-bottom: 0; }

    .btn-wishlist,
    .btn-compare {
      width: auto;
      height: auto;
      border: 0;
      background: transparent !important;
      color: #444;
      font-size: 1.4rem;
      font-weight: 400;
      text-transform: initial;

      svg {
        width: 14px;
        height: 14px;
        margin-right: .9rem;
        color: $c-theme;
      }

      span {
        display: inline-block;
      }

      &.is-active {
        color: #91dbff;
        background-color: transparent !important;

        svg {
          color: inherit;
        }
      }

      &:hover {
        color: $c-theme !important;

        svg {
          color: $c-theme;
        }
      }
    }

    .btn-compare svg {
      width: 1.7rem;
      margin-right: .6rem;
    }

    .qty-control {
      width: 8rem;
    }
  }

  @media all and (min-width: calc({{ settings.layout }} + 60px)) {
    padding: 30px;
    margin-right: -60px;
  }
}

// Layout - With sidebar
.template-product-sidebar {
  .slide-group .product-name {
    display: -webkit-box;
    font-family: $font-body;
    font-size: 1.4rem;
    line-height: 1.5rem;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
  }
}

// Related Products
#shopify-section-products-related {
  margin-top: 7rem;
  margin-bottom: 9rem;
}

@media all and (min-width: 768px) {
  .sticky-dir-down,
  .sticky-dir-up {
    position: -webkit-sticky;
    position: sticky;
    height: 100%;
  }

  .sticky-dir-up {
    top: 5.6rem;
  }

  .sticky-dir-down {
    bottom: 3rem;
    align-self: flex-end;
  }

  .product-form-sticky {
    .option-img-variant,
    .option-img-custom {
      width: 6rem;
      height: 6rem;
    }
  }
}

@media all and (max-width: 767px) {
  .product-img-area.thumbs-bottom { display: block }

  .product-layout .product-main { display: block; }

  .product-layout .product-img-area { margin-bottom: 5rem; }

  .product-img-area.thumbs-bottom .product-thumb { margin-right: 10px; }

  .product-details-tabs .tabs-nav__item a { padding: 1.2rem 2.8rem; }
  .tabs-content { padding: 1.6rem 2.8rem; }
}

@media all and (max-width: 575px) {
  .mfp-product-gallery {
    .mfp-arrow-right { right: 10px; }
    .mfp-arrow-left { left: 10px; }

    .mfp-close {
      top: 6px;
      right: -4px;
      width: 28px;
      height: 28px;
      line-height: 28px;
    }
  }
}
