/*===================== Color =====================*/
$c-theme: {{ settings.c_theme }};
$c-main-background: {{ settings.c_main_bg }};
$c-product-name: {{ settings.c_product_name }};
{%- if settings.font_origin == 'shopify' -%}
  $font-heading: {{ settings.font_heading.family }}, {{ settings.font_heading.fallback_families }};
  $font-body: {{ settings.font_body.family }}, {{ settings.font_body.fallback_families }};
  $font-menu: {{ settings.font_menu.family }}, {{ settings.font_menu.fallback_families }};
  $font-extra: {{ settings.font_extra.family }}, {{ settings.font_extra.fallback_families }};

{%- else -%}
  $font-heading: {{ settings.gf_heading }}, sans-serif;
  $font-body: {{ settings.gf_body }}, sans-serif;
  $font-menu: {{ settings.gf_menu }}, sans-serif;
  $font-extra: {{ settings.gf_extra }}, sans-serif;
  {%- endif -%}

// Choose font of product name
$s-p-n: 2.3rem;
{%- if settings.product_name_font_family == 'heading' -%}
  $s-p-n: 2.7rem;
{%- endif -%}

$f-p-n: Arial, sans-serif;
{%- if settings.product_name_font_family == 'heading' -%}
  $f-p-n: $font-heading;
{%- endif -%}

{%- if settings.product_name_font_family == 'body' -%}
  $f-p-n: $font-body;
{%- endif -%}

{%- if settings.product_name_font_family == 'menu' -%}
  $f-p-n: $font-menu;
{%- endif -%}

$f-p-d: Arial, sans-serif;
{%- if settings.product_desc_font_family == 'heading' -%}
  $f-p-d: $font-heading;
{%- endif -%}

{%- if settings.product_desc_font_family == 'body' -%}
  $f-p-d: $font-body;
{%- endif -%}

{%- if settings.product_desc_font_family == 'menu' -%}
  $f-p-d: $font-menu;
{%- endif -%}

.nav-to-tab-desc {
  margin-bottom: 5rem;
}

.template-product {
  overflow: unset;
}

.product-details-tabs,
.products-template {
  ol:not(.list-style-none),
  ul:not(.list-style-none) { padding-left: 20px; }
}


// Product image thumbnails
.product-img-area.thumbs-bottom {
  display: block;

  .items-carousel,
  .thumbs-wrapper {
    flex: 0 0 100%;
    -ms-flex: 0 0 100%;
    max-width: 100%;
  }

  &.thumbs-rect .thumbs-container {
    .flickity-prev-next-button {
      width: 2.8rem;
      height: 2.2rem;
      border: 2px solid #444;
      border-radius: 0;
      background: 0;

      .flickity-button-icon {
        width: 40%;
        height: 44%;
        top: 28%;
        left: 30%;
        color: #444;
      }
    }
  }

  &.thumbs-circle .thumbs-container {
    .flickity-prev-next-button {
      width: 2.8rem;
      height: 2.8rem;
      border: 2px solid transparent;
      border-radius: 100%;
      background: 0;

      .flickity-button-icon {
        width: 9px;
        height: 12px;
        top: 6px;
        left: 7px;
        color: #555;
      }
    }

    .flickity-button.previous {
      left: -36px;
      opacity: .75;
    }

    .flickity-button.next {
      right: -36px;
      opacity: .75;
    }
  }

  .thumbs-container {
    margin-top: 20px;

    &:not(.flickity-enabled) {
      white-space: nowrap;
      overflow-y: hidden;
      overflow-x: scroll;
      width: auto;

      > * { display: inline-block }
    }

    &:hover .flickity-prev-next-button { opacity: 0.75 }
  }

  .product-thumb {
    width: 7.5rem;
    margin: 0 20px 0 0;
  }

  &.thumbs-circle {
    .product-thumb {
      @media all and (min-width: 992px) {
        width: 9.5rem;
      }
    }

    .thumbs-container {
      width: calc(100% - 60px);
      margin: 0 auto;
    }
  }
}

.thumbs-wrapper {
  flex: 0 0 17.72%;
  -ms-flex: 0 0 17.72%;
  max-width: 17.72%;

  @media all and (min-width: 1600px) {
    .product-layout__default .thumbs-left & {
      position: absolute;
      height: auto !important;
      -webkit-transform: translateX(-127%);
      transform: translateX(-127%);
    }
  }
}

.thumbs-left .items-carousel { order: 1 }
.thumbs-left .thumbs-wrapper { order: 0 }

.product-details-area {
  width: 100%;
  height: 100%;

  .product-details__text { margin: 5px 0 }

  .vpp-atv {
    margin-bottom: 2rem;
    color: $c-theme;

    svg {
      width: 28px;
      height: 26px;
      margin-right: 8px;
    }
  }
}

.product-nav {
  display: flex;
  display: -ms-flexbox;
  padding: 7px 12px;
  border: 2px solid #d5d5d5;

  svg { fill: #999 }

  &:hover {
    background-color: $c-theme;
    border-color: $c-theme;

    svg { fill: #fff }
  }
}

.product-popup {
  position: absolute;
  top: 100%;
  width: 15rem;
  padding: 5px;
  transition: opacity .3s;
  border-top: 2px solid $c-theme;
  background-color: $c-main-background;
  box-shadow: 0 1px 2px rgba(0, 0, 0, .2);
  visibility: hidden;
  opacity: 0;

  .product-name {
    margin-top: 2px;
    font-size: 1.2rem;
    text-align: center;
  }
}

.product-item-container {
  display: none;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  text-align: center;
  z-index: 1;

  &.next-product {
    right: 3rem;

    .product-popup {
      right: 0;
    }
  }

  &.prev-product {
    left: 3rem;

    .product-popup {
      left: 0;
    }
  }

  &:hover {
    z-index: 2;

    .product-popup {
      visibility: visible;
      opacity: 1;
    }
  }

  @media screen and (min-width: 992px) {
    display: block;
  }
}

.social-sharing__title {
  display: block;
  margin-bottom: 18px;
}

.social-sharing__link {
  display: inline-block;
  margin-right: 10px;
  border: 1px solid #e0e0e0;

  svg {
    display: flex;
    display: -ms-flexbox;
    width: 30px;
    height: 30px;
    padding: 8px;
    fill: #cdcdcd;
  }

  &:hover svg { fill: #fff }
}

.facebook:hover {
  background-color: #3f83c3;
  border-color: #3f83c3;
}

.twitter:hover {
  background-color: #27c0c8;
  border-color: #27c0c8;
}

.pinterest:hover {
  background-color: #de2f2f;
  border-color: #de2f2f;
}

// Zoom container
.zoom-container {
  display: none;
}

.tabs .tabs-content__item { margin: 0; }

.tabs-nav {
  width: 100%;
  min-width: 100%;
}

.tabs-nav__item {
  margin-right: -2px;
  border-right: 1px solid #efefef;
  border-bottom: 1px solid #efefef;

  h4 {
    font-family: $font-heading;
    font-size: 1.4rem;
    letter-spacing: .2em;
    line-height: 2.2rem;
    text-transform: uppercase;
  }

  a {
    display: block;
    padding: 1.6rem 3.5rem;
  }

  &.active {
    border-left: 2px solid $c-theme;
    border-right: 0;
  }

  &:last-child {
    display: none;
    height: 100%;
    margin-bottom: -1px;
  }
}

.tabs-content__item {
  .product-videos {
    .product-description { padding: 0 1.5rem }

    div[class*="grid-items__"] {
      @media all and (max-width: 991px) {
        -ms-flex: 0 0 100%;
        flex: 0 0 100%;
        max-width: 100%;
      }
    }
  }
}

.product-details-tabs__classic {
  .tabs,
  .tabs-nav {
    display: flex;
    flex-direction: column;
  }

  .tabs {
    min-height: 450px;
    border: 1px solid #efefef;
  }

  .tabs-nav {
    margin-left: -1px;
  }

  .tabs-content {
    width: 100%;
    padding: 48px 60px;
  }

  @media all and (min-width: 768px) {
    .tabs {
      -ms-flex-direction: row;
      flex-direction: row;
      min-height: 350px;
    }

    .tabs-nav {
      width: 280px;
      min-width: 280px;

      .tabs-nav__item:last-child {
        display: list-item;
        height: 100%;
        min-height: 80px;
      }
    }
  }

  @media all and (max-width: 991px) {
    .tabs-content { padding: 32px 40px; }
  }
}

.product-details-tabs__modern {
  @media all and (min-width: 768px) {
    .tabs-nav {
      display: -ms-flexbox;
      display: flex;
      -ms-flex-pack: center;
      justify-content: center;
      -ms-flex-wrap: wrap;
      flex-wrap: wrap;
      border-bottom: 1px solid #efefef;
    }

    .tabs-nav__item {
      margin: 0;
      margin-bottom: -1px;
      border: 0;

      a {
        transition: .35s;
        border: 1px solid transparent;
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;

        &:hover {
          border: 1px solid #efefef;
        }
      }

      &.active {
        a {
          border: 1px solid #e0e0e0;
          border-bottom-color: transparent;
          border-bottom-width: 2px;
          background-color: $c-main-background;
        }
      }
    }

    .tabs-content {
      padding-top: 3rem;
    }
  }

  @media all and (min-width: 992px) {
    .tabs-content {
      padding-top: 5rem;
    }
  }

  @media all and (min-width: 1400px) {
    .tabs-content {
      padding-top: 8rem;
    }
  }

  @media all and (max-width: 991px) {
    .tabs-nav__item a { padding: 1.4rem 2.8rem; }
  }

  @media all and (max-width: 767px) {
    .tabs {
      border: 1px solid #e0e0e0;
    }

    .tabs-nav {
      margin-left: -1px;
      width: 100%;
      min-width: 100%;
    }

    .tabs-nav__item {
      border-color: #e0e0e0;
    }
  }
}

// Product badges
.product-layout .full-width {
  &.product-badge__advanced {
    background-color: #f4f4f4;
  }

  &.product-badge__modern {
    background-color: #f6f6f6;
  }
}

.product-badges {
  .promo-icon {
    position: relative;
    width: auto;
  }

  .promo-container {
    display: flex;
    display: -ms-flexbox;
    align-items: center;
    -ms-flex-align: center;
  }

  .promo-image img {
    display: block;
  }
}

.product-badges.bottom-full {
  align-items: center;
  width: auto;
  margin: 2.4rem auto 0;
  padding: 0;

  .product-badge {
    flex: 1;
    -ms-flex: 1;
    padding: 0 1.5rem;
  }

  .promo-container {
    padding-left: 3rem;
    padding-right: 3rem;
  }

  .promo-image img {
    height: 3.4rem;
    margin-right: 1.8rem;
  }

  .promo-title { white-space: nowrap }

  .classic {
    .promo-container {
      margin-top: 3rem;
      border: 1px solid #efefef;
      border-bottom: 2px solid $c-theme;
      box-shadow: initial;
    }
  }

  .product-badge__advanced & {
    margin: 48px auto 0;
    padding: 2rem 0 3.5rem;
  }

  .advanced {
    .promo-container {
      margin-top: 15px;
      border: 0;
      background-color: #fff;
    }
  }

  .product-badge__modern & {
    margin: 12.2rem auto 0;
    padding: 9.3rem 0 10.8rem;

    @media all and (max-width: 1399px) {
      margin-top: 6rem;
      padding: 4rem 0 5.5rem;
    }

    @media all and (max-width: 767px) {
      margin-top: 4.5rem;
      padding: 2rem 0 3.5rem;
    }
  }

  .modern {
    .promo-container {
      margin-top: 15px;
      border: 0;
      background-color: transparent;
    }

    .promo-icon {
      color: #333333;
    }

    .promo-title {
      font-family: $font-extra;
      font-size: 1.2rem;
      font-weight: 700;
      line-height: 1.7rem;
    }
  }
}

.product-badges.side-fixed {
  margin: 30px 0 0;

  .product-badge { width: 100% }

  .promo-container {
    margin-bottom: 10px;
    padding: 10px 27px;
  }

  .promo-icon {
    min-width: 44px;
    max-width: 44px;
    height: 26px;
  }

  .promo-image {
    width: 2.6rem;
    margin-right: 1.8rem;
  }

  .promo-title {
    color: #444;
    white-space: nowrap;
    font-weight: 700;
  }

  .classic {
    .promo-container {
      border: 1px solid #e0e0e0;
      box-shadow: initial;
    }

    .promo-title {
      font-family: $font-heading;
      font-size: 1.2rem;
      letter-spacing: .25em;
    }
  }

  .advanced {
    .promo-container {
      border: 1px solid #efefef;
      background-color: #fafafa;
    }

    .promo-title {
      font-family: $font-body;
      font-size: 1.4rem;
      letter-spacing: .04em;
    }
  }
}

.product-description {
  color: #5c5c5c;
  font-family: $f-p-d;
  font-size: 1.4rem;
  line-height: 2.3rem;

  p { margin-bottom: 1.6rem }

  iframe {
    display: block;
    width: auto;
    height: auto;
  }

  .product-details-summary & {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 10;
    margin-top: 3.5rem;
    color: #333333;
    font-size: 1.5rem;
    line-height: 2.3rem;
    overflow: hidden;
  }
}

// Product reviews
.spr-container {
  padding: 0 !important;
  border: 0 !important;

  .spr-review-header-byline {
    font-style: normal;
    letter-spacing: .05em;
  }
}

.spr-header-title,
.spr-form-title {
  color: #444444;
  font-size: 1.8rem !important;
  letter-spacing: .1em;
  text-transform: uppercase;
}

.spr-summary-starrating { font-size: 1.3rem; }

.spr-summary-actions-newreview {
  color: #444444;
  font-family: $font-heading;
  font-weight: 700;
  letter-spacing: .1em;
  text-transform: uppercase;
}

.spr-form-title {
  margin-bottom: 35px;
}

.spr-form-contact-name,
.spr-form-contact-email,
.spr-form-review-rating,
.spr-form-review-title {
  display: flex;
  display: -ms-flexbox;
  align-items: center;
}

.spr-form-label,
.spr-form-input {
  color: #777;
  font-family: Arial, Helvetica, sans-serif;
  font-size: 1.4rem !important;
}

.spr-form-label {
  display: inline-block;
  min-width: 88px;
  margin: 12px 0;
  padding-right: 10px;
}

input.spr-form-input {
  height: 46px;
  padding: 10px 20px;
  border: 1px solid #efefef;
}

.spr-form-review-body {
  .spr-form-label { width: 100% }
  .spr-form-input-textarea { padding: 20px }
}

.card-wrapper { margin-bottom: 2rem; }

.card-wrapper .product-name { line-height: 1.9rem }

